class Solution:
    def hIndex(self, citations: List[int]) -> int:
        n = len(citations)
        papers = [0] * (n + 1)
        
        # Count number of citations
        for c in citations:
            if c >= n:
                papers[n] += 1
            else:
                papers[c] += 1
        
        # Calculate h-index
        total = 0
        for i in range(n, -1, -1):
            total += papers[i]
            if total >= i:
                return i
        return 0
